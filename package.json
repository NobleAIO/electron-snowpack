{
  "name": "electron-snowpack",
  "version": "0.0.0",
  "private": true,
  "keywords": [
    "electron",
    "snowpack",
    "esbuild"
  ],
  "repository": "karolis-sh/electron-snowpack",
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "commit": "npx cz",
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json packages/*/package.json examples/*/package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!**/node_modules'",
    "purge": "lerna run --parallel clean; lerna clean",
    "qa": "run-p lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn qa"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "*.{json,md,yml,css,html}": [
      "pretty-quick --staged"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@k.sh/eslint-config": "^1.20.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "markdownlint-cli2": "^0.0.13",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^3.1.0",
    "sort-package-json": "^1.48.1"
  }
}
